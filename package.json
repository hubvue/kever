{
  "name": "kever",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "description": "A lightweight inversion of control container for Node.js apps powered by TypeScript and Koa runtime",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "node ./scripts/build.js",
    "format": "eslint --fix . --ext .js,.ts",
    "test": "mocha --require ts-node/register ./packages/**/test/*.spec.ts",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add ./CHANGELOG.md",
    "preinstall": "node ./scripts/checkYarn.js",
    "postinstall": "yarn bootstrap"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hubvue/kever.git"
  },
  "keywords": [
    "nodejs",
    "typescript",
    "ioc",
    "http server",
    "koa"
  ],
  "author": "kim",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/keverjs/kever/issues"
  },
  "homepage": "https://github.com/keverjs/kever#readme",
  "devDependencies": {
    "lerna": "^3.22.1",
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@microsoft/api-extractor": "^7.8.10",
    "@types/mocha": "^7.0.2",
    "@types/node": "^14.0.14",
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "@kever/logger": "^0.1.1",
    "conventional-changelog-cli": "^2.0.34",
    "eslint": "^7.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "execa": "^4.0.2",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.8",
    "mocha": "^7.2.0",
    "prettier": "^2.0.5",
    "reflect-metadata": "^0.1.13",
    "supertest": "^4.0.2",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "{src, test, example}/**/*.ts": [
      "npm run format",
      "prettier --write",
      "git add ."
    ],
    "{lib}/**/*.js": [
      "npm run format",
      "prettier --write",
      "git add ."
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
